{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ClipPrompt",
  "version": "0.1.0",
  "identifier": "com.clip-prompt",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Clip Prompt",
        "width": 800,
        "height": 1000,
        "resizable": true,
        "minWidth": 600,
        "minHeight": 500,
        "visible": false
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false,
      "title": "Clip Prompt"
    },
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
