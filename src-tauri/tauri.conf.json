{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ClipPrompt",
  "version": "0.3.1",
  "identifier": "com.clip-prompt",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Clip Prompt",
        "width": 800,
        "height": 1000,
        "resizable": true,
        "minWidth": 600,
        "minHeight": 500,
        "visible": false,
        "skipTaskbar": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "ClipPrompt Team",
    "category": "Productivity",
    "copyright": "Copyright (c) 2024 ClipPrompt Team",
    "deb": {
      "depends": []
    },
    "externalBin": [],
    "resources": [],
    "shortDescription": "AI-powered text enhancement tool",
    "longDescription": "ClipPrompt is a powerful cross-platform desktop application that enhances your text prompts using local AI models.",
    "wix": {
      "language": [
        "en-US"
      ]
    }
  }
}